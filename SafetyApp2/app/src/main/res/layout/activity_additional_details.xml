<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".UpdateAdditionalDetails">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <RelativeLayout
            android:id="@+id/RL_1st"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="15dp">
            <TextView
                android:id="@+id/TextView_person1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="  1st Person Details below:"
                android:textSize="18sp"
                android:textColor="@color/black"
                android:textStyle="bold"/>
            <EditText
                android:id="@+id/name_edittext1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/TextView_person1"
                android:hint="Name"
                android:inputType="textPersonName"
                tools:ignore="TouchTargetSizeCheck" />

            <EditText
                android:id="@+id/email_edittext1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/name_edittext1"
                android:hint="Email Address"
                android:inputType="textEmailAddress"
                tools:ignore="TouchTargetSizeCheck" />

            <EditText
                android:id="@+id/phone_edittext1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/email_edittext1"
                android:hint="Phone Number"
                android:inputType="phone"
                tools:ignore="TouchTargetSizeCheck" />
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/RL_2nd"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="15dp">
            <TextView
                android:id="@+id/TextView_person2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="  2nd Person Details below:"
                android:textSize="18sp"
                android:textColor="@color/black"
                android:textStyle="bold"/>

            <EditText
                android:id="@+id/name_edittext2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/TextView_person2"
                android:hint="Name"
                android:inputType="textPersonName"
                tools:ignore="TouchTargetSizeCheck" />

            <EditText
                android:id="@+id/email_edittext2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Email Address"
                android:inputType="textEmailAddress"
                android:layout_below="@+id/name_edittext2"
                tools:ignore="TouchTargetSizeCheck" />

            <EditText
                android:id="@+id/phone_edittext2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Phone Number"
                android:inputType="phone"
                android:layout_below="@id/email_edittext2"
                tools:ignore="TouchTargetSizeCheck" />

        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="15dp">
            <TextView
                android:id="@+id/TextView_person3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="  3rd Person Details below:"
                android:textSize="18sp"
                android:textColor="@color/black"
                android:textStyle="bold"
                />

            <EditText
                android:id="@+id/name_edittext3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Name"
                android:inputType="textPersonName"
                android:layout_below="@id/TextView_person3"
                tools:ignore="TouchTargetSizeCheck" />

            <EditText
                android:id="@+id/email_edittext3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Email Address"
                android:inputType="textEmailAddress"
                tools:ignore="TouchTargetSizeCheck"
                android:layout_below="@id/name_edittext3"/>

            <EditText
                android:id="@+id/phone_edittext3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Phone Number"
                android:inputType="phone"
                android:layout_below="@+id/email_edittext3"
                tools:ignore="TouchTargetSizeCheck" />
        </RelativeLayout>
        <Button
            android:id="@+id/submit_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="Submit"
            android:textSize="16sp"
            android:textStyle="bold"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            android:paddingTop="8dp"
            android:paddingBottom="8dp"
            android:layout_marginTop="12dp"/>

    </LinearLayout>





</ScrollView>

